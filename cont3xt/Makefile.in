install_sh = @install_sh@
mkdir_p = @mkdir_p@
INSTALL = @INSTALL@
CONT3XTDIR = @prefix@/cont3xt
BINDIR = @prefix@/bin
CP = /bin/cp

all:
	echo "CONT3XT!"

check:
	npm ci --production

install:
	@mkdir -p "$(CONT3XTDIR)" "$(CONT3XTDIR)/vueapp" "$(CONT3XTDIR)/integrations"
	$(INSTALL) *.js $(CONT3XTDIR)
	$(INSTALL) integrations/*.js $(CONT3XTDIR)/integrations
	#npm ci
	npm run bundle:min
	$(CP) -pr favicon.ico $(CONT3XTDIR)
	$(CP) -pr vueapp/dist "$(CONT3XTDIR)/vueapp"
	#(cd $(CONT3XTDIR) ; npm ci --production)
	#rm -f $(CONT3XTDIR)/package-lock.json

distclean realclean clean:
	rm -f *.o *.so
